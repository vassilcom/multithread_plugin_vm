{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "my_build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/vvv",
            "preLaunchTask": "build_project",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "GDK_SCALE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}